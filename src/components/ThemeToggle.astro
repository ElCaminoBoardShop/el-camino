---
import { Icon } from "astro-icon/components";
import { ThemeSwitch } from "astro-color-scheme";
---

<ThemeSwitch strategy="button">
  <button
    class="flex flex-row content-center rounded-[4px] focus:ring outline-0 ring-black-pearl-900 dark:ring-beeswax-50 ring-offset-2 ring-offset-sweet-tea-50 dark:ring-offset-fig-leaf-900"
  >
    <Icon class="block dark:hidden h-5 w-5 my-1" name="Sun" />
    <Icon class="hidden dark:block h-5 w-5 my-1" name="Moon" />
    <span class="sr-only">Toggle Theme</span>
    <span class="font-sans dark:hidden font-light text-sm p-1">Light Mode</span>
    <span class="font-sans hidden dark:block font-light text-sm p-1"
      >Dark Mode</span
    >
  </button>
</ThemeSwitch>
